{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/createCampaign",
        "function": "createCampaign"
      },
      {
        "source": "/api/getTimelineFeedData",
        "function": "getTimelineFeedData"
      },
      {
        "source": "/api/getUserProfileData",
        "function": "getUserProfileData"
      },
      {
        "source": "/api/getCampaignDetails",
        "function": "getCampaignDetails"
      },
      {
        "source": "/api/getBrandDashboardData",
        "function": "getBrandDashboardData"
      },
      {
        "source": "/api/campaigns",
        "function": "getCampaigns"
      },
      {
        "source": "/api/vote",
        "function": "vote"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm install && npm run build"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5002
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
